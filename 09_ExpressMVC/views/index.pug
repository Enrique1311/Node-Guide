extends layout

block content
  main.container
    h1.text-center= title
    div.text-right
      a.add-button(href="/add") Add Task
    ul.task-list
      if tasks.length === 0
        li
          b.text-center You haven´t tasks to do... 😃👌🏻
      else
        each task in tasks
          li(class=task.completed ? "completed": "")
            a(href=`/edit/${task.id}`) #{task.title}
            if task.completed
              a.uncomplete-button(href=`/uncomplete/${task.id}`) Uncheck
            else
              a.complete-button(href=`/complete/${task.id}`) Check
            a.delete-button(href=`/delete/${task.id}`) Delete
            